{% extends "bodybase.html.twig" %}

{% block bodycontainer %}
    <h2>{{ "credentials.title"|trans({}, "FOSUserBundle") }}</h2>
    <div class="row">
        <div class="span12 col-lg-12">
            <div class="panel">
                <div class="panel-body">
                    {% include 'SonataCoreBundle:FlashMessage:render.html.twig' %}
                    {% form_theme form 'bootstrap_3_layout.html.twig' %}
                    {{ form_start(form, {'action': path('elearning_user_edit_credentials'), 'attr': {'class': 'fos_user_change_password'}}) }}
                        {{ form_widget(form) }}
                        <button type="submit" class="btn btn-danger">{{ 'credentials.submit'|trans({}, 'FOSUserBundle') }}</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}