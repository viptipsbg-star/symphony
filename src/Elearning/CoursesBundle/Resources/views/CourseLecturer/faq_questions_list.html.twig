{% extends "bodybase.html.twig" %}


{% block bodycontainer %}
<h1>{{ "faq_questions.title"|trans }}</h1>
<div class="content-container">
    <div class="head-panel">
        <div class="new">
            <a href="{{ path("elearning_courses_faq_question_lecturer", {'course_id':course.id}) }}" class="btn btn-orange">{{ "faq_questions.new_question"|trans }}</a>
        </div>
    </div>
    <div class="body-panel">
        <div class="list-table">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>{{ "questions.question.question"|trans }}</th>
                        <th>{{ "questions.question.created"|trans }}</th>
                        <th>{{ "questions.question.show"|trans }}</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for question in questions %}
                    <tr>
                        <td>{{ question.question|slice(0, 100) ~ '...' }}</td>
                        <td>{{ question.createdtime|date("Y-m-d H:i:s") }}</td>
                        <td><a href="{{ path("elearning_courses_faq_question_lecturer", {'question_id':question.id}) }}">{{ "questions.question.show"|trans }}</a></td>
                        <td><a href="{{ path("elearning_courses_faq_question_delete_lecturer", {id: question.id}) }}"
                               class="btn btn-red pull-right"><span class="glyphicon glyphicon-trash"
                                                                       aria-hidden="true"></span></a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            <div class="pagination">
                {{ knp_pagination_render(questions) }}
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block stylesheets %}
    {% stylesheets '@ElearningCoursesBundle/Resources/less/styles.less'
    '@ElearningCoursesBundle/Resources/less/responsive.less' filter="cssrewrite" %}
        <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}

{% endblock %}
