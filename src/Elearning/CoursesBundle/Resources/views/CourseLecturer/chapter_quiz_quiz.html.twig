<div class="quiz-type quiz">
    <div class="questions">
        <div class="question">
            <div class="question-number">
                <span class="number">1</span>
                <a href="#" class="btn btn-red remove-quiz-question"><span
                            class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
            </div>
            <div class="form-group">
                <label>{{ "new_course.editor.quiz.quiz_quiz.question"|trans }}</label>
                <input type="text" name="question" value="" class="form-control question"/>
            </div>
            <div class="choices">
                <div class="form-group choice">
                    <label>{{ "new_course.editor.quiz.quiz_quiz.answer"|trans }}</label>

                    <div class="row">
                        <div class="col-md-9 col-xs-6">
                            <input type="text" name="choice[]" value="" class="form-control text"/>
                        </div>
                        <div class="col-md-2 col-xs-4">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="correct[]"
                                           class="correct"> {{ "new_course.editor.quiz.quiz_quiz.correct"|trans }}
                                </label>
                            </div>
                        </div>
                        <div class="col-md-1 col-xs-1">
                            <a href="#" class="btn btn-red remove-quiz-choice"><span class="glyphicon glyphicon-trash"
                                                                                     aria-hidden="true"></span></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <a href="#"
                   class="btn btn-orange-empty add-quiz-choice">{{ "new_course.editor.quiz.quiz_quiz.add_answer"|trans }}</a>
            </div>
        </div>
    </div>
    <div class="form-group">
        <a href="#"
           class="btn btn-orange-empty add-quiz-question">{{ "new_course.editor.quiz.quiz_quiz.add_question"|trans }}</a>
    </div>
</div>

