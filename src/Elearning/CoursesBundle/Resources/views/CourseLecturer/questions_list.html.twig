{% extends "bodybase.html.twig" %}


{% block bodycontainer %}
<h1>{{ "questions.title"|trans }}</h1>
<div class="content-container">
    <div class="body-panel">
        {% if questions.count == 0 %}
        <div class="empty-message">
            <h3>{{ "questions.no_questions"|trans }}</h3>
        </div>
        {% else %}
        <div class="list-table">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>{{ "questions.question.question"|trans }}</th>
                        <th>{{ "questions.question.question_date"|trans }}</th>
                        <th>{{ "questions.question.answer_date"|trans }}</th>
                        <th>{{ "questions.question.show"|trans }}</th>
                        <th>{{ "questions.question.faq"|trans }}</th>
                        <th>{{ "questions.question.delete"|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for question in questions %}
                    <tr>
                        <td>{{ question.question|slice(0, 100) ~ '...' }}</td>
                        <td>{{ question.createdtime|date("Y-m-d H:i:s") }}</td>
                        <td>{{ question.answeredtime is not empty ? question.answeredtime|date("Y-m-d H:i:s") : "" }}</td>
                        <td><a href="{{ path("elearning_courses_question_lecturer", {'question_id':question.id}) }}">{{ "questions.question.show"|trans }}</a></td>
                        <td><a href="{{ path("elearning_courses_faq_question_lecturer") }}?course_question={{ question.id }}">{{ "questions.question.copy_to_faq"|trans }}</a></td>
                        <td><a href="{{ path("elearning_courses_question_delete_lecturer", { 'id': question.id  } ) }}">{{ "questions.question.delete"|trans }}</a></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            <div class="pagination">
                {{ knp_pagination_render(questions) }}
            </div>
        </div>
        {% endif %}
    </div>
</div>

{% endblock %}

{% block stylesheets %}
    {% stylesheets '@ElearningCoursesBundle/Resources/less/styles.less'
    '@ElearningCoursesBundle/Resources/less/responsive.less' filter="cssrewrite" %}
        <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}

{% endblock %}
