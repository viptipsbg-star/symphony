{% extends 'bodybase.html.twig' %}

{% block bodycontainer %}
    <div class="row">
        <div class="col-md-12">
            <h2>{{ 'reflection.student.list_title'|trans({}, 'FOSUserBundle') }}</h2>
            
            <div class="panel panel-default">
                <div class="panel-heading">
                    <a href="{{ path('student_reflection_create') }}" class="btn btn-orange pull-right">
                        <i class="fa fa-plus"></i> {{ 'reflection.student.create_button'|trans({}, 'FOSUserBundle') }}
                    </a>
                    <div class="clearfix"></div>
                </div>
                <div class="panel-body">
                    {% if reflections|length > 0 %}
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>{{ 'reflection.list.course'|trans({}, 'FOSUserBundle') }}</th>
                                    <th>{{ 'reflection.list.date'|trans({}, 'FOSUserBundle') }}</th>
                                    <th>{{ 'reflection.list.status'|trans({}, 'FOSUserBundle') }}</th>
                                    <th>{{ 'reflection.list.actions'|trans({}, 'FOSUserBundle') }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for reflection in reflections %}
                                    <tr class="{{ reflection.teacherResponse and not reflection.isReadByStudent ? 'info' : '' }}">
                                        <td>{{ reflection.course.name }}</td>
                                        <td>{{ reflection.studentCreatedAt|date('Y-m-d H:i') }}</td>
                                        <td>
                                            {% if reflection.teacherResponse %}
                                                <span class="label label-success">{{ 'reflection.status.responded'|trans({}, 'FOSUserBundle') }}</span>
                                            {% else %}
                                                <span class="label label-warning">{{ 'reflection.status.pending'|trans({}, 'FOSUserBundle') }}</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <a href="{{ path('student_reflection_view', {'id': reflection.id}) }}" class="btn btn-sm btn-default">
                                                <i class="fa fa-eye"></i> {{ 'reflection.action.view'|trans({}, 'FOSUserBundle') }}
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <div class="alert alert-info">
                            {{ 'reflection.student.no_reflections'|trans({}, 'FOSUserBundle') }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
